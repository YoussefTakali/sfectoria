generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Noth{
  id String @id
}
model User {
  id String @id @default(uuid())
  firstName String
  lastName String
  phoneNumber String?
  birthday DateTime?
  gender String?
  cin String?
  address String?
  email String
  password String
  role String?
  job String?
  createdAt DateTime @default(now())
  points Int @default(0)
  status String?
  photo String?
}